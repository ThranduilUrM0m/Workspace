{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "turbo.json",
    ".env.local",
    ".env"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true,
      "dependsOn": ["^dev"]
    },
    "build": {
      "outputs": [".next/**", "dist/**", "build/**"],
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "package.json"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "lint": {
      "cache": true,
      "outputs": [".eslintcache"],
      "inputs": ["src/**", ".eslintrc.*", "package.json"]
    },
    "test": {
      "cache": true,
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "tests/**", "jest.config.*", "package.json"]
    }
  }
}
