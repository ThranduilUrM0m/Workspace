{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/ui": ["../../../../packages/ui/src"],
      "@repo/ui/*": ["../../../../packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
